{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VmAdminUsername": {
            "type": "string"
        },
        "VmAdminPassword": {
            "type": "secureString"
        },
        "Restrict_SSH_VM_AccessByPublicIP": {
            "type": "string",
            "defaultValue": "*",
            "metadata": {
                "description": "The default is to allow SSH access from any source Public IP (*). To restric access it, please specify your Public IP address with CIDR. For single IP add 1.1.1.1/32."
            }
        },
        "deployHubVPNGateway": {
            "type": "string",
            "defaultValue": "false",
            "allowedValues": [
                "true",
                "false"
            ]
        },
        "deployOnpremisesVPNGateway": {
            "type": "string",
            "defaultValue": "false",
            "allowedValues": [
                "true",
                "false"
            ]
        },
        "RoutingType": {
            "type": "string",
            "defaultValue": "Static",
            "allowedValues": [
                "Dynamic(BGP)",
                "Static"
            ]
        },
        "sharedKey": {
            "type": "securestring",
            "defaultValue": "P@assw@d",
            "metadata": {
                "description": "The shared key used to VPN tunnel between the two Azure and OnPrem VPN Gateways."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location of the resources"
            },
            "defaultValue": "[resourceGroup().location]"
        },

        "Azure": {
            "type": "object",
            "defaultValue": {
                "name": "azure",
                "addressSpacePrefix": "10.0.1.0/24",
                "subnet1Prefix": "10.0.1.0/27",
                "gatewaySubnetPrefix": "10.0.1.32/27",
                "asn": "65010",
                "gatewaySku": "VpnGw2",
                "vpnGatewayGeneration": "Generation2"
            }
        },
        "Onprem1": {
            "type": "object",
            "defaultValue": {
                "name": "branch1",
                "addressSpacePrefix": "10.0.1.0/24",
                "subnet1Prefix": "10.0.1.0/27",
                "gatewaySubnetPrefix": "10.0.1.32/27",
                "asn": "65001",
                "gatewaySku": "VpnGw1",
                "vpnGatewayGeneration": "Generation1"
            }
        },
        "Onprem2": {
            "type": "object",
            "defaultValue": {
                "name": "branch2",
                "addressSpacePrefix": "10.0.1.0/24",
                "subnet1Prefix": "10.0.1.0/27",
                "gatewaySubnetPrefix": "10.0.1.32/27",
                "asn": "65002",
                "gatewaySku": "VpnGw1",
                "vpnGatewayGeneration": "Generation1"
            }

        }
    },
    "variables": {
        "nsgname": "Default-NSG",
        "artifactsLocation": "https://raw.githubusercontent.com/dmauser/azure-hub-spoke-base-lab/main/linked/",
        "nsgtemplateURI": "[concat(uri(variables('artifactsLocation'),'nsg.json'))]",
        "onpremvnettemplateURI": "[concat(uri(variables('artifactsLocation'),'vnet-onprem.json'))]",
        "vpngwtemplateURI": "[concat(uri(variables('artifactsLocation'),'vpngw.json'))]",
        "vpnconnURI": "[concat(uri(variables('artifactsLocation'),'vpnconnection.json'))]",
        "vmtemplateURI": "[concat(uri(variables('artifactsLocation'),'vm.json'))]",
        "lngtemplateURI": "[concat(uri(variables('artifactsLocation'),'localnetgw.json'))]",
        "enableBgp": "true",
        "Azure": {
            "subnetName": "subnet1",
            "gatewayName": "[concat(parameters('Azure').name,'-vpngw')]",
            "gatewayPublicIPName": "[concat(parameters('Azure').name,'-vpngw-pip')]",
            "connectionName1": "[concat(parameters('Azure').name,'-to-',concat(parameters('Onprem1').name))]",
            "connectionName2": "[concat(parameters('Azure').name,'-to-',concat(parameters('Onprem2').name))]"
        },
        "OnPrem1": {
            "subnetName": "subnet1",
            "gatewayName": "[concat(parameters('Onprem1').name,'-vpngw')]",
            "gatewayPublicIPName": "[concat(parameters('Onprem1').name,'-vpngw-pip')]",
            "connectionName": "[concat(parameters('Onprem1').name,'-to-',concat(parameters('Azure').name))]"
        },
        "OnPrem2": {
            "subnetName": "subnet1",
            "gatewayName": "[concat(parameters('Onprem2').name,'-vpngw')]",
            "gatewayPublicIPName": "[concat(parameters('Onprem2').name,'-vpngw-pip')]",
            "connectionName": "[concat(parameters('Onprem2').name,'-to-',concat(parameters('Azure').name))]"
        }
    },
    "resources": [
        {
            "name": "nsg",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nsgtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkSecurityGroupName": {
                        "value": "[variables('nsgname')]"
                    },
                    "RestrictSshAccessByPublicIP": {
                        "value": "[parameters('Restrict_SSH_VM_AccessByPublicIP')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployHubVPNGateway'),'true')]",
            "name": "[concat(parameters('Azure').name,'-vnet')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'NSG')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('onpremvnettemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('Azure').name]"
                    },
                    "addressSpacePrefix": {
                        "value": "[parameters('Azure').addressSpacePrefix]"
                    },
                    "subnetName": {
                        "value": "[variables('Azure').subnetName]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('Azure').subnet1Prefix]"
                    },
                    "gatewaySubnetPrefix": {
                        "value": "[parameters('Azure').gatewaySubnetPrefix]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat(parameters('Onprem1').name,'-vnet')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'NSG')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('onpremvnettemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('Onprem1').name]"
                    },
                    "addressSpacePrefix": {
                        "value": "[parameters('Onprem1').addressSpacePrefix]"
                    },
                    "subnetName": {
                        "value": "[variables('OnPrem1').subnetName]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('Onprem1').subnet1Prefix]"
                    },
                    "gatewaySubnetPrefix": {
                        "value": "[parameters('Onprem1').gatewaySubnetPrefix]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployHubVPNGateway'),'true')]",
            "name": "[variables('Azure').gatewayName]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Azure').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpngwtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "gatewayName": {
                        "value": "[variables('Azure').gatewayName]"
                    },
                    "gatewaySku": {
                        "value": "[parameters('Azure').gatewaySku]"
                    },
                    "vpnGatewayGeneration": {
                        "value": "[parameters('Azure').vpnGatewayGeneration]"
                    },
                    "enableBgp": {
                        "value": "[variables('enableBgp')]"
                    },
                    "asn": {
                        "value": "[parameters('Azure').asn]"
                    },
                    "vnetName": {
                        "value": "[concat(parameters('Azure').name, '-vnet')]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat(parameters('Onprem2').name,'-vnet')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'NSG')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('onpremvnettemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('Onprem2').name]"
                    },
                    "addressSpacePrefix": {
                        "value": "[parameters('Onprem2').addressSpacePrefix]"
                    },
                    "subnetName": {
                        "value": "[variables('OnPrem2').subnetName]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('Onprem2').subnet1Prefix]"
                    },
                    "gatewaySubnetPrefix": {
                        "value": "[parameters('Onprem2').gatewaySubnetPrefix]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[variables('OnPrem1').gatewayName]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Onprem1').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpngwtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "gatewayName": {
                        "value": "[variables('OnPrem1').gatewayName]"
                    },
                    "gatewaySku": {
                        "value": "[parameters('Onprem1').gatewaySku]"
                    },
                    "vpnGatewayGeneration": {
                        "value": "[parameters('Onprem1').vpnGatewayGeneration]"
                    },
                    "enableBgp": {
                        "value": "[variables('enableBgp')]"
                    },
                    "asn": {
                        "value": "[parameters('Onprem1').asn]"
                    },
                    "vnetName": {
                        "value": "[concat(parameters('Onprem1').name,'-vnet')]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[variables('OnPrem2').gatewayName]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Onprem1').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpngwtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "gatewayName": {
                        "value": "[variables('OnPrem2').gatewayName]"
                    },
                    "gatewaySku": {
                        "value": "[parameters('Onprem2').gatewaySku]"
                    },
                    "vpnGatewayGeneration": {
                        "value": "[parameters('Onprem2').vpnGatewayGeneration]"
                    },
                    "enableBgp": {
                        "value": "[variables('enableBgp')]"
                    },
                    "asn": {
                        "value": "[parameters('Onprem2').asn]"
                    },
                    "vnetName": {
                        "value": "[concat(parameters('Onprem2').name,'-vnet')]"
                    }
                }

            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat('s2sconnection-',parameters('Azure').name,'-to-',parameters('Onprem1').name)]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', variables('OnPrem1').gatewayName)]",
                "[resourceId('Microsoft.Resources/deployments', variables('Azure').gatewayName)]",
                "[resourceId('Microsoft.Resources/deployments','lng-azure-static')]",
                "[resourceId('Microsoft.Resources/deployments','lng-onprem1-static')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpnconnURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "sharedKey": {
                        "value": "[parameters('sharedKey')]"
                    },
                    "OnPremGatewayName": {
                        "value": "[variables('OnPrem1').gatewayName]"
                    },
                    "OnPremConnectionName": {
                        "value": "[variables('OnPrem1').connectionName]"
                    },
                    "AzureGatewayName": {
                        "value": "[variables('Azure').gatewayName]"
                    },
                    "AzureConnectionName": {
                        "value": "[variables('Azure').connectionName1]"
                    },
                    "LngAzure": {
                        "value": "[concat(parameters('Azure'),'-LNG-Static')]"
                    },
                    "LngOnprem": {
                        "value": "[concat(parameters('Onprem1'),'-LNG-Static')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat('s2sconnection-',parameters('Azure').name,'-to-',parameters('Onprem2').name)]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', variables('OnPrem2').gatewayName)]",
                "[resourceId('Microsoft.Resources/deployments', variables('Azure').gatewayName)]",
                "[resourceId('Microsoft.Resources/deployments','lng-azure-static')]",
                "[resourceId('Microsoft.Resources/deployments','lng-onprem1-static')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpnconnURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "sharedKey": {
                        "value": "[parameters('sharedKey')]"
                    },
                    "OnPremGatewayName": {
                        "value": "[variables('OnPrem2').gatewayName]"
                    },
                    "OnPremConnectionName": {
                        "value": "[variables('OnPrem2').connectionName]"
                    },
                    "AzureGatewayName": {
                        "value": "[variables('Azure').gatewayName]"
                    },
                    "AzureConnectionName": {
                        "value": "[variables('Azure').connectionName1]"
                    },
                    "LngAzure": {
                        "value": "[concat(parameters('Azure'),'-LNG-Static')]"
                    },
                    "LngOnprem": {
                        "value": "[concat(parameters('Onprem2'),'-LNG-Static')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('Azure').name,'-vm')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Azure').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('VmAdminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('VmAdminPassword')]"
                    },
                    "subnetName": {
                        "value": "[variables('Azure').subnetName]"
                    },
                    "virtualNetworkId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks/', concat(parameters('Azure').name, '-vnet'))]"
                    },
                    "virtualMachineName": {
                        "value": "[concat(parameters('Azure').name,'-lxvm')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat(parameters('Onprem1').name,'-vm')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Onprem1').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('VmAdminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('VmAdminPassword')]"
                    },
                    "subnetName": {
                        "value": "[variables('OnPrem1').subnetName]"
                    },
                    "virtualNetworkId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks/', concat(parameters('Onprem1').name, '-vnet'))]"
                    },
                    "virtualMachineName": {
                        "value": "[concat(parameters('Onprem1').name,'-lxvm')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "[concat(parameters('Onprem2').name,'-vm')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', concat(parameters('Onprem2').name,'-vnet'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('VmAdminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('VmAdminPassword')]"
                    },
                    "subnetName": {
                        "value": "[variables('OnPrem2').subnetName]"
                    },
                    "virtualNetworkId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks/', concat(parameters('Onprem2').name, '-vnet'))]"
                    },
                    "virtualMachineName": {
                        "value": "[concat(parameters('Onprem2').name,'-lxvm')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "lng-azure-static",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('lngtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[concat(parameters('Azure'),'-lng-static')]"
                    },
                    "gatewayIpAddress": {
                        "value": "[reference(resourceId('Microsoft.Resources/deployments', variables('Azure').gatewayName)).outputs.GWpublicIP.value.bgpPeeringAddresses[0].tunnelIpAddresses[0]]"
                    },
                    "localNetworkAddressSpace": {
                        "value": [
                            {
                                "localNetworkAddressSpace": {
                                    "addressPrefixes": [
                                        "[parameters('Azure').addressSpacePrefix]"
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "lng-onprem1-static",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('lngtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[concat(parameters('Onprem1'),'-lng-static')]"
                    },
                    "gatewayIpAddress": {
                        "value": "[reference(resourceId('Microsoft.Resources/deployments', variables('OnPrem1').gatewayName)).outputs.bgpSettings.value[0].bgpPeeringAddresses.tunnelIpAddresses]"
                    },
                    "localNetworkAddressSpace": {
                        "value": [
                            {
                                "localNetworkAddressSpace": {
                                    "addressPrefixes": [
                                        "[parameters('Onprem1').addressSpacePrefix]"
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "condition": "[equals(parameters('deployOnpremisesVPNGateway'),'true')]",
            "name": "lng-onprem2-static",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('lngtemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[concat(parameters('Onprem2'),'-LNG-Static')]"
                    },
                    "gatewayIpAddress": {
                        "value": "[reference(resourceId('Microsoft.Resources/deployments', variables('OnPrem2').gatewayName)).outputs.bgpSettings.value[0].bgpPeeringAddresses.tunnelIpAddresses[0]]"
                    },
                    "localNetworkAddressSpace": {
                        "value": [
                            {
                                "localNetworkAddressSpace": {
                                    "addressPrefixes": [
                                        "[parameters('Onprem2').addressSpacePrefix]"
                                    ]
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}